{
  "name": "Tardis",
  "version": "1.1.0",
  "private": true,
  "description": "Time counter and path watcher",
  "author": "Web Expert Business",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev": "NODE_ENV=development vue-cli-service serve --port 8182 & sleep 10 && NODE_ENV=development electron app.js",
    "electron": "NODE_ENV=production electron app.js",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "prod": "NODE_ENV=production vue-cli-service build & sleep 10 && NODE_ENV=production electron app.js"
  },
  "main": "background.js",
  "dependencies": {
    "animate.css": "^3.7.2",
    "axios": "^0.18.0",
    "bulma": "^0.7.5",
    "bulma-helpers": "^0.3.8",
    "bulma-pageloader": "^2.1.0",
    "bulma-toast": "^1.5.1",
    "bulmaswatch": "^0.7.5",
    "chokidar": "^3.0.1",
    "core-js": "^2.6.5",
    "date-fns": "^2.2.1",
    "electron-store": "^5.0.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "vue": "^2.6.10",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "babel-eslint": "^10.0.1",
    "electron": "^5.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-cli-plugin-electron-builder": "^1.4.0",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
